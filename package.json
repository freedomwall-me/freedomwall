{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "format": "concurrently \"npm run format:js\" \"npm run format:blade\"",
        "format:js": "prettier --write \"resources/js/**/*.js\" \"resources/css/**/*.css\" \"resources/sass/**/*.scss\"",
        "format:blade": "blade-formatter --write \"resources/views/**/*.blade.php\""
    },
    "devDependencies": {
        "@popperjs/core": "^2.10.2",
        "autoprefixer": "^10.4.13",
        "axios": "^0.21",
        "blade-formatter": "^1.32.4",
        "bootstrap": "^5.1.3",
        "concurrently": "^7.6.0",
        "font-awesome": "^4.7.0",
        "highlight.js": "^11.7.0",
        "jquery": "^3.6.3",
        "js-cookie": "^3.0.1",
        "laravel-mix": "^6.0.49",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14",
        "postcss-import": "^14.1.0",
        "prettier": "^2.8.3",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.32.11",
        "sass-loader": "^11.0.1",
        "simplemde": "^1.11.2"
    }
}
